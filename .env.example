# No config is required for a first run.
# Only copy this file to ".env" if you want to override defaults.

# Open-Meteo endpoints (keyless by default)
# Note: keep CLIMATE_BASE_URL empty unless you explicitly want the climate endpoint.
# The app defaults to historical-forecast + archive to avoid strict climate endpoint throttling.
# VITE_OPEN_METEO_CLIMATE_BASE_URL=
VITE_OPEN_METEO_CLIMATE_FALLBACK_BASE_URL=https://historical-forecast-api.open-meteo.com/v1/forecast
VITE_OPEN_METEO_CLIMATE_ARCHIVE_BASE_URL=https://archive-api.open-meteo.com/v1/archive
VITE_OPEN_METEO_AIR_BASE_URL=https://air-quality-api.open-meteo.com/v1/air-quality
VITE_OPEN_METEO_PROXY_BASE_URL=http://localhost:8787/api/weather/open-meteo
VITE_WEATHER_SUMMARY_API_BASE_URL=http://localhost:8787
VITE_RUNTIME_MODE=dynamic
VITE_STATIC_WEATHER_BASE_PATH=/static-weather/v1

# Number of full past years to average for "typical month" values
VITE_WEATHER_BASELINE_YEARS=5

# Season API backend (frontend calls this proxy endpoint)
VITE_SEASON_API_BASE_URL=http://localhost:8787

# Weather proxy cache tuning (backend only)
WEATHER_PROXY_CACHE_TTL_MS=21600000
WEATHER_PROXY_STALE_MAX_AGE_MS=604800000
WEATHER_PROXY_TIMEOUT_MS=15000
WEATHER_BASELINE_YEARS=5
WEATHER_SUMMARY_TIMEOUT_MS=12000
WEATHER_SUMMARY_ATTEMPTS=3
WEATHER_SUMMARY_RETRY_BASE_DELAY_MS=900
WEATHER_UPSTREAM_REQUEST_SPACING_MS=500
WEATHER_RATE_LIMIT_MIN_BACKOFF_MS=45000
WEATHER_YEAR_CACHE_MAX_ENTRIES=6
WEATHER_SNAPSHOT_CLIMATE_MAX_AGE_DAYS=365
WEATHER_SNAPSHOT_AIR_MAX_AGE_DAYS=90
WEATHER_SNAPSHOT_MARINE_MAX_AGE_DAYS=365
WEATHER_SNAPSHOT_AUTO_UPDATE_ENABLED=true
WEATHER_SNAPSHOT_AUTO_INTERVAL_MINUTES=360
WEATHER_SNAPSHOT_AUTO_BATCH_SIZE=24
WEATHER_MANUAL_DATA_DIR=data/manual-city-month
TARGET_CYCLE_DAYS=180
DAILY_CALL_BUDGET=3000
RUNS_PER_DAY=1
STATIC_LAYOUT_SHARD_THRESHOLD=10000
NOMAD_DATA_DB_PATH=.cache/nomad-hub/nomad-data.sqlite

# Amadeus credentials (backend only, never expose in frontend)
AMADEUS_CLIENT_ID=
AMADEUS_CLIENT_SECRET=
AMADEUS_BASE_URL=https://test.api.amadeus.com
SEASON_ENABLE_LIVE_AMADEUS=false
