{
  "name": "nomad-weather-map",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "npm run dev:all",
    "dev:web": "vite",
    "server:dev": "node --env-file-if-exists=.env --experimental-strip-types server/index.ts",
    "dev:all": "concurrently --names server,web --prefix-colors yellow,cyan --kill-others-on-fail \"npm run server:dev\" \"npm run dev:web\"",
    "dev:health": "node scripts/dev-health.mjs",
    "dev:open": "open http://localhost:5173",
    "weather:snapshot:update": "node --env-file-if-exists=.env --experimental-strip-types scripts/updateWeatherSnapshot.ts",
    "nomad:tables:sync": "node --env-file-if-exists=.env --experimental-strip-types scripts/syncNomadTables.ts",
    "nomad:tables:report": "node --env-file-if-exists=.env --experimental-strip-types scripts/reportNomadTables.ts",
    "nomad:manual:import": "node --env-file-if-exists=.env --experimental-strip-types scripts/importManualCityData.ts",
    "nomad:manual:fill-climate": "METEOSTAT_CACHE_DIR=.cache/meteostat .venv-meteostat/bin/python scripts/fillManualClimateFromMeteostat.py",
    "nomad:manual:fill-climate-fallback": ".venv-meteostat/bin/python scripts/fillManualClimateFromNasaPower.py",
    "nomad:manual:fill-air": ".venv-meteostat/bin/python scripts/fillManualAirFromOpenMeteo.py",
    "nomad:manual:fill-marine": ".venv-meteostat/bin/python scripts/fillManualMarineFromOpenMeteo.py",
    "nomad:manual:templates": "node --env-file-if-exists=.env --experimental-strip-types scripts/generateManualCityTemplates.ts",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "check": "npm run lint && npm run test:run && npm run build",
    "security:secrets": "bash scripts/security/scan-secrets.sh"
  },
  "dependencies": {
    "leaflet": "^1.9.4",
    "papaparse": "^5.5.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-leaflet": "^5.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^24.10.1",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^28.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.18"
  }
}
