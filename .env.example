# Open-Meteo endpoints (keyless by default)
VITE_OPEN_METEO_CLIMATE_BASE_URL=https://climate-api.open-meteo.com/v1/climate
VITE_OPEN_METEO_AIR_BASE_URL=https://air-quality-api.open-meteo.com/v1/air-quality

# Number of full past years to average for "typical month" values
VITE_WEATHER_BASELINE_YEARS=5

# Future provider keys (leave empty in Phase 1)
VITE_WEATHER_API_KEY=

# Season API backend (frontend calls this proxy endpoint)
VITE_SEASON_API_BASE_URL=http://localhost:8787

# Amadeus credentials (backend only, never expose in frontend)
AMADEUS_CLIENT_ID=
AMADEUS_CLIENT_SECRET=
AMADEUS_BASE_URL=https://test.api.amadeus.com
SEASON_ENABLE_LIVE_AMADEUS=true
